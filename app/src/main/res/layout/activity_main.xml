                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="ALARM!"
                android:textAllCaps="true"
                android:textColor="#fff"

                android:textSize="50sp" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="200dp"
