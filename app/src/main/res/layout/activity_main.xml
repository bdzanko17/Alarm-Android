                android:layout_gravity="center"
                android:text="ALARM!"
                android:textAllCaps="true"
                android:textColor="#fff"

                android:textSize="50sp" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
